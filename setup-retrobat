#!/bin/sh

# Function to download and execute setup script
download_and_execute() {
    local os="$1"
    local url="$2"
    
    # Downloading the setup script
    echo "Downloading setup script for ${os}..."
    curl -s -o setup-script.sh "${url}"

    # Adding execute permission
    chmod +x setup-script.sh
    
    # Executing the script in silent mode
    echo "Executing setup script for ${os}..."
    ./setup-script.sh --silent
}

# Detect the operating system
case "$(uname)" in
    Linux)
        download_and_execute "Linux" "https://example.com/setup-linux.sh"
        ;;
    Darwin)
        download_and_execute "macOS" "https://example.com/setup-macos.sh"
        ;;
    CYGWIN*|MINGW32*|MSYS*|MINGW*)
        download_and_execute "Windows" "https://example.com/setup-windows.sh"
        ;;
    *)
        echo "Unsupported OS"
        exit 1
        ;;
esac

echo "Setup completed successfully."